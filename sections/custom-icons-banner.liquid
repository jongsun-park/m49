<style>
  .custom-ups-bar__container {
    background-color: #004289;
    color: white;
  }
</style>

<!-- TODO ICON SELELCTOR -->
<div class="bg-[#F5F6F4] w-full -my-6" data-cc-animate>
  <div class="custom-icon-banner max-w-[1440px] px-5 mx-auto mb-6 py-6 flex flex-col gap-6 md:gap-12 items-center">
    <span class="text-center font-bold">{{ section.settings.title | escape }}</span>
    <h2 class="text-4xl md:text-6xl font-bold text-center max-w-[24ch]">{{ section.settings.heading | escape }}</h2>

    <div class="grid grid-cols-2 md:grid-cols-4">
      <div class="flex flex-col space-y-4 py-6 px-6 items-center">
        <div>{% render 'icon-location-big' %}</div>
        <div class="uppercase font-bold text-2xl text-[#333] text-center">{{ section.settings.icon1_title }}</div>
        <div class="text-center">{{ section.settings.icon1_description }}</div>
      </div>
      <div class="flex flex-col space-y-4 py-6 px-6 items-center">
        <div>{% render 'icon-planet-earth' %}</div>
        <div class="uppercase font-bold text-2xl text-[#333] text-center">{{ section.settings.icon2_title }}</div>
        <div class="text-center">{{ section.settings.icon2_description }}</div>
      </div>
      <div class="flex flex-col space-y-4 py-6 px-6 items-center">
        <div>{% render 'icon-saint-patrick' %}</div>
        <div class="uppercase font-bold text-2xl text-[#333] text-center">{{ section.settings.icon3_title }}</div>
        <div class="text-center">{{ section.settings.icon3_description }}</div>
      </div>
      <div class="flex flex-col space-y-4 py-6 px-6 items-center">
        <div>{% render 'icon-knitting' %}</div>
        <div class="uppercase font-bold text-2xl text-[#333] text-center">{{ section.settings.icon4_title }}</div>
        <div class="text-center">{{ section.settings.icon4_description }}</div>
      </div>
    </div>

    {% if section.settings.link != blank %}
      <a href="{{  section.settings.link }}" class="py-4 px-12 border-solid border-2 border-[#004289] text-[#004289] font-bold hover:text-white hover:bg-[#004289] transition duration-150">Learn More</a>
    {% endif %}


  </div>

</div>

{% schema %}
  {
    "name": "Custom Icon Banner",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Quisque velit nisi-"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "\"PELLENTESQUE IN IPSUM ID ORCI PORTA DAPIBUS.\""
      },
      {
        "type": "text",
        "id": "icon1_title",
        "label": "Icon 1 Title",
        "default": "WE love outdoors"
      },
      {
        "type": "text",
        "id": "icon1_description",
        "label": "Icon 1 Description",
        "default": "Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus."
      }, {
        "type": "text",
        "id": "icon2_title",
        "label": "Icon 2 Title",
        "default": "Sustainable"
      }, {
        "type": "text",
        "id": "icon2_description",
        "label": "Icon 2 Description",
        "default": "Curabitur blandit tempus porttitor. Maecenas faucibus mollis interdum."
      }, {
        "type": "text",
        "id": "icon3_title",
        "label": "Icon 3 Title",
        "default": "based in IRELAND"
      }, {
        "type": "text",
        "id": "icon3_description",
        "label": "Icon 3 Description",
        "default": "Sed posuere consectetur est at lobortis. Aenean lacinia bibendum nulla sed consectetur."
      }, {
        "type": "text",
        "id": "icon4_title",
        "label": "Icon 4 Title",
        "default": "something"
      }, {
        "type": "text",
        "id": "icon4_description",
        "label": "Icon 4 Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit"
      }, {
        "type": "url",
        "id": "link",
        "label": "Learn More Link"
      }
    ],
    "presets": [
      {
        "name": "Custom Icon Banner"
      }
    ]
  }
{% endschema %}