<style>
  .main-article img {
    width: 100%;
  }

  .main-article .subtitle {
    font-size: 20px;
    color: #004289;
    font-weight: bold;
  }

  .main-article h2 {
    font-weight: bold;
    text-transform: uppercase;
    color: #004289;
    font-size: 36px;
  }

  @media (max-width: 768px) {
    .main-article h2 {
      font-size: 24px;
    }
  }
</style>

<div class="max-w-[1440px] mx-auto flex flex-col lg:flex-row">
  <div class="main-article p-[30px] md:p-[60px] md:mr-10 flex-1 space-y-6" data-cc-animate>
    <h1 class="font-bold text-3xl md:text-6xl uppercase text-[#004289]">{{ article.title }}</h1>
    {{ article.content }}
  </div>
  <aside class="py-[50px] px-[60px] bg-[#F5F6F4] w-full md:w-1/3 md:max-w-[460px]" data-cc-animate>
    <div class="sticky top-0">
      <h2 class="font-bold text-3xl uppercase text-[#004289] mb-10">SIDEBAR</h2>
      <ul>
        {% for link in linklists[section.settings.sidebar_links].links %}
          <li class="list-none">
            <a class="" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </aside>
</div>


{% schema %}
  {
    "name": "Custom Article ",
    "class": "custom-article",
    "settings": [
      {
        "type": "link_list",
        "id": "sidebar_links",
        "label": "Sidebar Links"
      }
    ]
  }
{% endschema %}