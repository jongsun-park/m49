<style>
  .copyright a::before {
    content: "|";
    padding-left: 1em;
    padding-right: 1.2em;
  }
</style>

{% for block in section.blocks %}
  {% case block.type %}

    {% when 'custom-newsletter' %}
      {% render 'custom-newsletter'
        , settings: block.settings %}

    {% when 'custom-icons-banner' %}
      {% render 'custom-icons-banner'
        , settings: block.settings %}


    {% when 'custom-ups-bar' %}
      {% render 'custom-ups-bar'
        , settings: block.settings %}

  {% endcase %}
{% endfor %}

<div
  data-section-type="footer"
  class="custom-footer w-full px-12 pt-4 pb-10 lg:px-0 lg:max-w-[90vw] lg:ml-auto"
  data-cc-animate>
  <div class="custom-footer__container w-full grid grid-cols-1 md:grid-cols-4 space-x-4 space-y-8 md:space-y-0">
    <div>
      <img
        class="mx-auto max-w-[150px]"
        src="{{ section.settings.footer_image | image_url: width: 300 }}"
        alt="{{ section.settings.footer_image.alt }}">

    </div>
    <div>
      <h2 class="text-xl uppercase font-bold mb-4">Info</h2>
      <ul>
        {% for link in linklists[section.settings.info_menu].links %}
          <li class="list-none text-sm">
            <a class="" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="space-y-4">
      <h2 class="text-xl uppercase font-bold mb-4">Contact</h2>
      <div>
        <div>
          <span class="min-w-[8ch] inline-block">Tel</span>
          <span class="text-[#004289] font-bold">{{ section.settings.tel }}</span>
        </div>
        <div>
          <span class="min-w-[8ch] inline-block">E-mail</span>
          <span class="text-[#004289] font-bold">
            {{ section.settings.email }}</span>
        </div>
      </div>
      <address>
        {{ section.settings.address }}
      </address>
      <div>
        <h3 class="uppercase font-bold mb-4">Follow Us</h3>
        <div class="flex flex-row space-x-2 items-center">
          <!-- Social Icons -->
          {% if section.settings.show_social_icons != blank %}
            {% render 'custom-social-icons' %}
          {% endif %}
        </div>
      </div>
    </div>
    <div class="flex flex-col p-8 bg-[#004289]">
      {% render 'custom-footer-newsletter' %}
    </div>
  </div>
</div>
<div class="copyright flex flex-row justify-around py-10 border-solid border-t-2 border-gray-200">
  <div class="text-sm flex flex-row align-center items-center">
    <span>
      Copyright © StudioForty9
    </span>
    {% for link in linklists[section.settings.copyright_menu].links %}
      <a class="" href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </div>
  <div class="flex flex-row align-center space-x-2 items-center">
    <span>Built by</span>
    <img
      class="inline max-w-[150px]"
      src="{{ section.settings.built_by | image_url: width: 300 }}"
      alt="{{ section.settings.built_by.alt }}">
  </div>
</div>

{% schema %}
  {
    "name": "Custom Footer",
    "class": "custom-section-footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_image",
        "label": "Footer Image"
      },
      {
        "type": "link_list",
        "id": "info_menu",
        "label": "Info Link List"
      },
      {
        "type": "link_list",
        "id": "copyright_menu",
        "label": "Copyright Link List"
      },
      {
        "type": "text",
        "id": "tel",
        "label": "Contact Tel",
        "default": "012 3456789"
      }, {
        "type": "text",
        "id": "email",
        "label": "Contact Email",
        "default": "hello@domain.com"
      }, {
        "type": "richtext",
        "id": "address",
        "label": "Contact Address",
        "default": "<p>Lorem Ipsum Outdoor \nUnit 1, Lipsum,\nCity, Co. County</p>"
      }, {
        "type": "checkbox",
        "id": "show_social_icons",
        "label": "Show Social Icons",
        "default": true
      }, {
        "type": "image_picker",
        "id": "built_by",
        "label": "Built By Logo"
      }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "custom-newsletter",
        "name": "Footer Newsletter",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "join our Newsletter"
          },
          {
            "type": "richtext",
            "id": "subheading",
            "label": "Subheading",
            "default": "<p>Be the first to know about our offers, events &  new arrivals.</p>"
          },
          {
            "type": "color",
            "id": "color_bg",
            "label": "Background color",
            "default": "#004289"
          },
          {
            "type": "paragraph",
            "content": "Customers who subscribe will have their email address added to the “accepts marketing” [customer list](/admin/customers?query=&accepts_marketing=1)"
          }, {
            "type": "image_picker",
            "id": "newsletter_cover",
            "label": "Newsletter Cover"
          }
        ]
      }, {
        "type": "custom-icons-banner",
        "name": "Footer Icons Banner",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Quisque velit nisi-"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "\"PELLENTESQUE IN IPSUM ID ORCI PORTA DAPIBUS.\""
          },
          {
            "type": "text",
            "id": "icon1_title",
            "label": "Icon 1 Title",
            "default": "WE love outdoors"
          },
          {
            "type": "text",
            "id": "icon1_description",
            "label": "Icon 1 Description",
            "default": "Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus."
          }, {
            "type": "text",
            "id": "icon2_title",
            "label": "Icon 2 Title",
            "default": "Sustainable"
          }, {
            "type": "text",
            "id": "icon2_description",
            "label": "Icon 2 Description",
            "default": "Curabitur blandit tempus porttitor. Maecenas faucibus mollis interdum."
          }, {
            "type": "text",
            "id": "icon3_title",
            "label": "Icon 3 Title",
            "default": "based in IRELAND"
          }, {
            "type": "text",
            "id": "icon3_description",
            "label": "Icon 3 Description",
            "default": "Sed posuere consectetur est at lobortis. Aenean lacinia bibendum nulla sed consectetur."
          }, {
            "type": "text",
            "id": "icon4_title",
            "label": "Icon 4 Title",
            "default": "something"
          }, {
            "type": "text",
            "id": "icon4_description",
            "label": "Icon 4 Description",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit"
          }, {
            "type": "url",
            "id": "link",
            "label": "Learn More Link"
          }
        ]
      }, {
        "type": "custom-ups-bar",
        "name": "Footer UPS Bar",
        "settings": [
          {
            "type": "text",
            "id": "ups_bar_col_1_text",
            "label": "UPS Bar Text 1",
            "default": "28 Day Returns"
          }, {
            "type": "text",
            "id": "ups_bar_col_2_text",
            "label": "Free Delivery On Orders Over €40",
            "default": "28 Day Returns"
          }, {
            "type": "text",
            "id": "ups_bar_col_3_text",
            "label": "UPS Bar Text 3",
            "default": "Irish Family Business Since 1984"
          }, {
            "type": "checkbox",
            "id": "fullwidth",
            "label": "Banner Full Width",
            "default": false
          }
        ]
      }
    ]
  }
{% endschema %}